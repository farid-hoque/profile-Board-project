generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

/**
 * Make shcema model then process to env file and next comand pnpm dlx prisma generate and pnpm dlx prism mygrate dev --name init
 */
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String   @unique
  location  String
  photo     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Student {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String   @unique
  age       Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("students")
}
